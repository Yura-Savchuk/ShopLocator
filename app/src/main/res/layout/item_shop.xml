<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewShopName"
        android:text="Shop name example"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="normal|bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="?android:textColorPrimary"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Owner: "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewShopOwner"
        app:layout_constraintLeft_toLeftOf="@+id/textViewShopName"
        app:layout_constraintTop_toBottomOf="@+id/textViewShopName"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/textViewShopName" />

    <TextView
        android:text="Shop On Map x: y:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewShopCoords"
        app:layout_constraintTop_toBottomOf="@+id/textViewShopOwner"
        app:layout_constraintLeft_toLeftOf="@+id/textViewShopName"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/textViewShopName" />

    <View
        android:id="@+id/viewSelection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#88ffffff"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>